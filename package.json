  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/download": "^6.2.3",
    "@types/find-up": "^2.1.1",
    "@types/fs-extra": "^5.0.4",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.7",
    "@types/ora": "^1.3.4",
    "codecov": "^3.1.0",
    "dotenv": "^6.1.0",
    "ganache-cli": "^6.1.6",
