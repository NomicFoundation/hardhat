    "ethereumjs-util": "^5.2.0",
    "find-up": "^2.1.0",
    "fs-extra": "^6.0.1",
    "ganache-core": "^2.1.6",
    "glob": "^7.1.2",
    "import-lazy": "^3.1.0",
    "inquirer": "^6.0.0",
    "mocha": "^5.1.1",
    "ora": "^2.1.0",
    "repl.history": "^0.1.4",
    "solc": "0.5.1",
    "solidity-parser-antlr": "^0.2.12",
    "source-map-support": "^0.5.9",
    "tsort": "0.0.1",
    "web3": "^0.20.6"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "dist",
      "sample-project",
      "test",
      "coverage",
      ".nyc_output"
    ],
    "reporter": [
      "text",
      "lcovonly"
    ],
    "all": true
  }
