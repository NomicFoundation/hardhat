  "main": "dist/src/lib/buidler-lib.js",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "blockchain",
    "dapps",
    "javascript",
    "tooling",
    "task-runner",
    "solidity"
  ],
  "bin": {
