    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Edge",
            "port": 9222,
            "request": "attach",
            "type": "msedge",
            "webRoot": "${VersoriumX}"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${VersoriumX}\\src\\internal\\provider-proxy.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${VersoriumX}/build-test/**/*.js"
            ]
        }
    ]
}